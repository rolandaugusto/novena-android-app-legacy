<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lanovena"
    android:versionCode="9"
    android:versionName="1.3.5" 
    android:installLocation="auto">
    
	<uses-permission android:name="android.permission.INTERNET" />  
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	
    <uses-sdk 
        android:minSdkVersion="8" 
        android:targetSdkVersion="11"
        />
    <supports-screens 
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:resizeable="true"
        android:anyDensity="true"
        />
        
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"      
        >  
               
        <activity
            android:label="@string/app_name"
            android:name="DashboardActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="NovenaActivity" android:label="@string/tabNovena"></activity>
        <activity android:name="InfoActivity" android:label="@string/tabInfo"></activity>
        <activity android:name="RecipeActivity" android:label="@string/tabRecipes"></activity>
        <activity android:name=".VillancicoActivity" android:label="@string/tabVillancicos"></activity>
        <activity android:name=".page.CollectionVillancicosActivity" android:label="@string/tabVillancicos"></activity>
        <activity android:name=".page.CollectionDaysActivity" android:label="@string/tabNovena"></activity>
        <activity android:name=".page.CollectionDailyPrayActivity" android:label="@string/tabNovena"></activity>
        <activity android:name=".page.GozosActivity" android:label="@string/gozos"></activity>
        <activity android:name=".page.OracionesActivity" android:label="@string/oraciones"></activity>
        <activity android:name=".page.CollectionRecipesActivity" android:label="@string/tabRecipes"></activity>
        <activity android:name=".page.YoutubeActivity" android:label="@string/app_name"></activity>
        <activity
            android:name="com.adsdk.sdk.banner.InAppWebView"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        
          
    </application>

</manifest>